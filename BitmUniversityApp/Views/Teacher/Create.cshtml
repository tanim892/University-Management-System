@model BitmUniversityApp.Controllers.Teacher

@{
    ViewBag.Title = "Create";
}



<style>
    .container {
        width: 964px;
    }
    .form-horizontal {
        margin-left: 34%;
    }
    .text-center {
        text-align: center;
        margin-left: 210px;
    }
</style>
<h2 class="text-center">Save Teacher</h2>
    @using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
   
    if (ViewBag.Message != null)
    {
        <div class="row">
            <div class="col-sm-6 ">
                <div class="alert alert-@ViewBag.MessageType">
                    @Html.Raw(ViewBag.Message)
                </div>
            </div>
        </div>
    }
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.TeacherName, new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.TeacherName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TeacherName)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.TeacherAddress, new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.TextAreaFor(model => model.TeacherAddress, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TeacherAddress)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.TeacherEmail, new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.TeacherEmail, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TeacherEmail)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.TeacherContactNo, new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.TeacherContactNo, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TeacherContactNo)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.DesignationId, "Designation", new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @*@Html.DropDownList("DesignationId", String.Empty)*@
                @Html.DropDownList("DesignationId", null, "--Select--", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DesignationId)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.DepartmentId, "Department", new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.DropDownList("DepartmentId", null, "--Select--", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DepartmentId)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.CreditTaken, new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.CreditTaken, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CreditTaken)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-10 col-md-push-4" >
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}



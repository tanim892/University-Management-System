@model IEnumerable<BitmUniversityApp.Models.Department>

@{
    ViewBag.Title = "Index";
}
<style>
    #particles-js {
        position: absolute;
        width: 100%;
        height: 113%;
        background-color: #799c99;
    }
    h2 {
        margin-left: 201px;
    }
    .container {
        width: 1030px;
        position: absolute;
        
        top: 3px;
    }
</style>
<h2 class="text-center"> All Depatments</h2>


<table class="table table-bordered table-hover table-striped table-responsive col-md-offset-2">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DeptCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeptName)
        </th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DeptCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeptName)
            </td>

            @*<td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>*@

        </tr>
    }
</table>
